"resource/layout/accountbutton.layout"
{
	styles
	{
		AccountPersonaStyleOffline
		{
		
			textcolor=ACCENT
			font-size=16
			PADDING-LEFT=6
			render
			{
				0="image(x0-40, y0-5, x1, y1-2, graphics/ABavatarBorderOffline)"
			}
		}

		AccountPersonaStyleOnline
		{
	
			textcolor=BLUE
			font-size=16
			PADDING-LEFT=6
			render
			{
				0="image(x0-40, y0-5, x1, y1-2, graphics/ABavatarBorderOnline)"
			}
		}

		AccountPersonaStyleInGame
		{

			textcolor=GREEN2
			font-size=16
			PADDING-LEFT=6
			render
			{
				0="image(x0-40, y0-5, x1, y1, graphics/ABavatarBorderInGame)"
			}
		}

		AccountDropDownStyleOffline
		{
			bgcolor=none
		}

		AccountDropDownStyleOnline
		{
			bgcolor=none
		}

		AccountDropDownStyleInGame
		{
			bgcolor=none
		}

		AccountBalanceStyle
	
		{
			textcolor = BALANCE
			bgcolor="NONE"
			font-weight=500
			padding-right=6
			render{
				0="fill( x0 + 1, y0 + 1, x0 + 2, y0 + 2, "none" )"
				0="fill( x1 - 1, y0 + 1, x1 - 2, y0 + 2, "none" )"
				0="fill( x0 + 1, y1 - 1, x0 + 2, y1 - 2, "none" )"
				0="fill( x1 - 1, y1 - 1, x1 - 2, y1 - 2, "none" )"
			}
		}

		AccountMenuButtonStyle
		{
			bgcolor=none
			render_bg {}
			render{
				1="fill(x0,y0,x1,y0+1, "none")"  // top
				2="fill(x0,y1-1,x1,y1, "none")"  // bottom
				3="fill(x0,y0+1,x0+1,y1-1, "none")"  // left
				4="fill(x1-1,y0+1,x1,y1-1, "none")"  // right
				}
			
		}
		AccountMenuButtonStyle:hover
		{
			bgcolor = "214 214 214 100"
			render_bg {}

		}
		
				AccountMenuButtonStyle:selected
		{
			bgcolor=none
			render_bg {}
			inset-left=2
			image="graphics/user (2)"
			
		}
		
		AccountMenuButtonStyle:active
		{
			bgcolor = "NONE" 
			render {}
			image="graphics/user (2)"
		}
	}

	layout
	{
		place { control="account_menu_button" align=left height=39 width=max  } // span over everything
		place { control="account_persona" align=right height=39 }
		place { control="account_avatar" align=right end-right="account_persona" margin-top=3 height=30 width=30 }
		place { control="account_balance" align=right margin-top=10 end-right="account_avatar" }

		//hidden
		place { control="account_drop_down" margin-left=-999 }
	}
}

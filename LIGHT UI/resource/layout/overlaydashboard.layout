"Resource/layout/overlaydashboard.layout" {

	include "colors.styles"

	styles {
		overlaymain {
			render {
				0="image_scale( x0, y0 + 234, x1, y0 + 240, graphics/material/shadow_horiz2 )"
			}
			render_bg {
				0="fill( x0, y0, x1, y0 + 234, OVERLAYBAR )"
			}
		}

		OverlayURLLabel {
			textcolor=none
			image="ICONS/overlay_close"
		}

		OverlayURLLabel:hover { image="ICONS/overlay_close_hover" }

		topbar {
			font-family=condensed
			font-size=54
			font-weight=700
			font-style=uppercase
			textcolor = OVERLAYGAMENAME

			//game name
		}
		
		
	}

	layout {
		region { name=overlay height=240 width=max margin-left=50 margin-right=60 }
			place { control=gamename region=overlay align=left y=30 }
			place { control=TaskbarPanel region=overlay width=200 height=max align=right end-right=CloseButton margin-right=50 }
			place { control=CloseButton region=overlay align=right height=0 width=0 y=97 }

		place { control=TopFadePanel,PowerMeterDim,BottomFadePanel,HotkeyLabel,HotkeyExplain height=0 width=0 }
	}
}

"resource/layout/accountmenu.layout"
{
	styles
	{
		AccountMenuStyle
		{
			bgcolor="228 228 228 255"
			render_bg
			{
		      1="fill( x0 + 1, y0, x1 - 1, y0 + 1, frameBorder )"  
				2="fill( x0 + 1, y1 - 1, x1 - 1, y1, frameBorder )" 
				3="fill( x0, y0 + 1, x0 + 1, y1 - 1, frameBorder )"  
			 4="fill( x1 - 1, y0 + 1, x1, y1 - 1, frameBorder )"  
			}
		}

		account_menu_button
		{
			bgcolor="228 228 228 255"
		}
		account_menu_button:hover
		{
			bgcolor=white10
		}
		account_menu_button:active
		{
			bgcolor=white05
		}

		account_menu_label
		{
			textcolor="88 88 88 255"
		}
	}

	layout
	{
	    place { control="view_profile_button"  align=left margin-left=5 margin-top=4  height=24 width=max}
		place { control="view_account_button" align=left margin-left=5 margin-top=28 height=24 width=max}
		place { control="change_user_button" align=left margin-left=5 margin-top=100 height=24 width=max }
		place { control="view_preferences_button" align=left margin-left=5 margin-top=52 height=24 width=max}
		place { control="view_wallet_button" align=left margin-left=5 margin-top=76 height=24 width=max }
	}
}
